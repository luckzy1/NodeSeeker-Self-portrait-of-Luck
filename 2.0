    function processPage() {
        if (!state.isRunning) return;

        // åŠ¨æ€ä¿®æ­£ï¼šæ¯æ¬¡ç¿»é¡µéƒ½å†æ¬¡æ£€æŸ¥æœ€å¤§é¡µæ•°ï¼Œé˜²æ­¢ç¬¬ä¸€é¡µæ£€æµ‹ä¸å‡†
        const currentRealMax = detectTotalPages();
