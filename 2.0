             if (match) return `${sideUserLink.innerText.trim()} (UID: ${match[1]})`;
        }

        // ç­–ç•¥2: éå†æ‰€æœ‰æŒ‡å‘ /space/ çš„é“¾æ¥ï¼Œå¯»æ‰¾ç‰¹å¾æœ€æ˜æ˜¾çš„
        const links = document.querySelectorAll('a[href^="/space/"]');
        for (const link of links) {
            // æ’é™¤çº¯å¤´åƒæˆ–æ— å…³é“¾æ¥ï¼Œä¼˜å…ˆæ‰¾æœ‰æ–‡æœ¬çš„
            if (link.innerText.trim() && link.closest('.user-card')) {
                 const match = link.href.match(/\/space\/(\d+)/);
                 if (match) return `${link.innerText.trim()} (UID: ${match[1]})`;
            }
        }

        // ä¿åº•: å°è¯•ä» URL æˆ– é¡¶éƒ¨å¯¼èˆª
        const navUser = document.querySelector('a.nav-link[href^="/space/"]');
        if (navUser) {
             const match = navUser.href.match(/\/space\/(\d+)/);
             if (match) return `${navUser.innerText.trim()} (UID: ${match[1]})`;
        }

        return "NodeSeeker";
    }

    function getUrlPage() {
        const hashMatch = window.location.hash.match(/p-(\d+)/);
        if (hashMatch) return parseInt(hashMatch[1]);
        const params = new URLSearchParams(window.location.search);
        return parseInt(params.get('page')) || 1;
    }

    // ä¿®å¤2: æ·±åº¦é¡µç æ£€æµ‹ (æ”¯æŒ href æ‰«æ)
    function detectTotalPages() {
        const pagination = document.querySelector('.pagination') || document.querySelector('div[role="navigation"]');
        if (!pagination) return 1;

        let max = 1;

        // æ–¹å¼ A: æ‰«ææ–‡æœ¬æ•°å­— (å« span, li, a, div)
        const elements = pagination.querySelectorAll('a, li, div, span, strong');
        elements.forEach(el => {
            const txt = el.innerText.trim().replace(/\.\./g, '');
            // ä¸¥æ ¼åŒ¹é…çº¯æ•°å­—ï¼Œé˜²æ­¢è¯¯è¯»
            if (/^\d+$/.test(txt)) {
                const num = parseInt(txt);
                if (num > max) max = num;
            }
        });

        // æ–¹å¼ B: æ‰«æé“¾æ¥ href (è§£å†³ "æœ«é¡µ" æŒ‰é’®æ˜¯å›¾æ ‡æˆ–æ–‡å­—ä¸åŒ…å«æ•°å­—çš„é—®é¢˜)
        // æŸ¥æ‰¾æ‰€æœ‰å¸¦ page å‚æ•°çš„é“¾æ¥
        const links = pagination.querySelectorAll('a[href]');
        links.forEach(el => {
            const href = el.getAttribute('href');
            if (href) {
                // åŒ¹é… ?page=62 æˆ– /p-62
                const match = href.match(/[?&]page=(\d+)/) || href.match(/\/p-(\d+)/) || href.match(/\/comments\/(\d+)/);
                if (match) {
                    const num = parseInt(match[1]);
                    if (num > max) max = num;
                }
            }
        });

        return max;
    }

    function startExtraction() {
        const inputPages = parseInt(document.getElementById('ns-pages').value) || 1;
        const curPage = getUrlPage();
        const detectedMax = detectTotalPages();
        let maxTarget = Math.max(inputPages, detectedMax);

